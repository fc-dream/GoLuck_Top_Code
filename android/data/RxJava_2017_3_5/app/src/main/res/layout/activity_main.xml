<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="top.goluck.rxjava_2017_3_5.MainActivity">

    <TextView
        android:id="@+id/main_create"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#00ff00"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/main_create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/main_change"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#00ff00"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/main_change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/main_filter"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#00ff00"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/main_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.5" />

</android.support.constraint.ConstraintLayout>
