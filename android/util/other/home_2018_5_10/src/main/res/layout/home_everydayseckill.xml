<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/everydayseckill_rlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/everydayseckill_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_everydayseckill" />

        <TextView
            android:id="@+id/everydayseckill_text1"
            android:layout_toRightOf="@id/everydayseckill_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="天天秒杀"
            android:textColor="#fff44336"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/everydayseckill_text2"
            android:layout_toRightOf="@id/everydayseckill_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="全场满88包邮"
            android:textColor="#ff999999"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/everydayseckill_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/everydayseckill_text_h"
            android:text="0点场"
            android:textColor="#ff333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/everydayseckill_text_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/everydayseckill_text_m_"
            android:text="00"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:textSize="11dp"
            />
        <TextView
            android:id="@+id/everydayseckill_text_m_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/everydayseckill_text_m"
            android:text="："
            android:textColor="#ff000000"
            android:textSize="11dp"
            />

        <TextView
            android:id="@+id/everydayseckill_text_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/everydayseckill_text_s_"
            android:text="00"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:textSize="11dp"
            />

        <TextView
            android:id="@+id/everydayseckill_text_s_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/everydayseckill_text_s"
            android:text="："
            android:textColor="#ff000000"
            android:textSize="11dp"
            />
        <TextView
            android:id="@+id/everydayseckill_text_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="#ff000000"
            android:layout_marginRight="15dp"
            android:text="00"
            android:textColor="#ffffffff"
            android:textSize="11dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/everydayseckill_llayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/everydayseckill_rlayout1"
        android:weightSum="4">

        <include
            android:id="@+id/everydayseckill_item1"
            layout="@layout/home_item_choiceness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/everydayseckill_item2"
            layout="@layout/home_item_choiceness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/everydayseckill_item3"
            layout="@layout/home_item_choiceness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/everydayseckill_item4"
            layout="@layout/home_item_choiceness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>