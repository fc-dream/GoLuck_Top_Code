<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 门店详情页的评分星星 -->
    <style name="StoreDetailRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/shape_rating_bar</item>
        <item name="android:rating">0.0</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:numStars">5</item>
    </style>

</resources>
